        "noImplicitAny": true,
        "allowJs": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "jsx": "react",
        "lib": [
            "es2015",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
